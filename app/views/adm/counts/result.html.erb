<% @sub_menu = "result_#{@c_s}".to_sym %>

<article>
	<%= form_for @search, :url => result_adm_counts_path, :method => :get do |f| %>
		<fieldset>
			<legend>Filter</legend>
			<dl class="inline">
				<%= render :partial => 'adm/tags/search_dl', :locals => {:f => f} %>
				<%= hidden_field_tag :count, @c_i %>
			</dl>
			<div class="buttons">
				<%= f.submit 'Search', :class => "button" %>
			</div>
		</fieldset>
	<% end %>
</article>

<article>
	<h1>Count <%= @c_i %> Result</h1>
	<table id="table1" class="gtable">
		<thead>
			<tr>
				<th>Tag Number</th>
				<th>Item Number</th>
				<th>Location</th>
				<th>Shelf</th>
				<th>Count <%= @c_i %></th>
			</tr>
		</thead>
		<tbody>

			<% @tags.each do |tag| %>
			<tr>
				<td><%= tag.id %></td>
				<td><%= tag.inventory.item.try(:code) %></td>
				<td><%= tag.inventory.location.try(:code) %></td>
				<td><%= tag.try(:sloc) %></td>
				<td class='number'><%= tag.send(@c_s) %></td>
			</tr>
			<% end %>
			
		</tbody>
	</table>
	<div class="tablefooter clearfix">
		<%= will_paginate @tags %>
	</div>
</article>