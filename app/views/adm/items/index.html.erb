<% @sub_menu = params[:sub_menu].try(:to_sym) %>
<article>
	<%= render :partial => 'shared/flash' %>
	
	<%= form_for @search, :url => adm_items_path, :method => :get do |f| %>
		<fieldset>
			<legend>Filter</legend>
			<dl class="inline">
				<dt><%= f.label :code_like, 'Item Number contains' %></dt>
				<dd>
				<%= f.text_field :code_like, :class => "small required", :tabindex => 1 %>
				</dd>

				<dt><%= f.label :is_active_not_eq, 'inActive' %></dt>
				<dd><%= f.check_box :is_active_not_eq, {}, true, false %></dd>

				<dt>&nbsp;</dt>
				<dd><%= f.submit 'Search', :class => 'button' %></dd>
			</dl>
		</fieldset>
		<%= link_to "New Item", new_adm_item_path(:sub_menu => @sub_menu), :class => 'button' %>
	<% end %>
</article>

<article>
	<h1><%= curr_check.items.count %> Items</h1>
	<table id="table2" class="gtable detailtable">
		<thead>
			<tr>
				<th>Item Number</th>
				<th>Cost</th>
				<th>Active</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
			<tr>
				<td><a href="#" class="detail-link"><%= item.code %></a></td>
				<td class='number'><%=number_to_currency item.cost %></td>
				<td><%= item.is_active %></td>
				<td>
					<% if allow_data_entry? %>
					<%= link_to "Change_Cost", input_price_adm_item_path(item) %><br />
					<%= link_to 'New_Ticket', new_adm_item_tag_path(item) %><br />
					<%= link_to('New_Remote_Input', new_adm_item_inventory_path(item)) if item.is_active %>
					<% end %>
				</td>
			</tr>
			<tr class="detail">
				<td colspan="5">
					<table>
						<tbody>
							<tr>
								<td><%= item.try(:description) %></td>
							</tr>
						</tbody>
					</table>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
	<div class="tablefooter clearfix">
		<%= will_paginate @items %>
	</div>
</article>
