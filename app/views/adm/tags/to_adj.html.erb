<article>
	
	<h1>Setup Final Qty</h1>
	<%= form_for @tag, :url => update_adj_adm_tag_path(@tag), :html => {:class => 'uniform'} do |f| %>
		<%= render :partial => "shared/errors", :locals => {:object => @tag} %>

		<fieldset>
			<legend>Entry</legend>
			<dl class="inline">
				<dt><%= f.label :id, 'Ticket #' %></dt>
				<dd><%= f.label :id, @tag.id %></dd>

				<dt><%= f.label :location_code, 'Onsite Warehouse' %></dt>
				<dd><%= f.label :location_code, @tag.inventory.location.try(:code) %></dd>

				<dt><%= f.label :item_id, 'Item #' %></dt>
				<dd><%= f.label :item_id, @tag.inventory.item.code %></dd>
				<dt><%= f.label :item_description, 'Desc.' %></dt>
				<dd><%= f.label :item_description, @tag.inventory.item.description %></dd>
				<dt><%= f.label :count_1 %></dt>
				<dd><%= f.label :count_1, @tag.count_1 || 0 %></dd>
				<dt><%= f.label :count_2 %></dt>
				<dd><%= f.label :count_2, @tag.count_2 || 0 %></dd>
				<dt><%= f.label :count_3 %></dt>
				<dd><%= f.label :count_3, @tag.count_3 || 0 %></dd>
				<dt><%= f.label :final %></dt>
				<dd><%= f.label :final, @tag.final_count || 0 %></dd>

				<dt><%= f.label :adjustment, 'Manual Adjustment' %></dt>
				<dd><%= f.text_field :adjustment, :class => "small", :tabindex => 1 %></dd>


			</dl>
		</fieldset>
		<div class="buttons">
			<%= f.submit "Save", :class => 'button' %>
		</div>

	<% end %>
	
</article>