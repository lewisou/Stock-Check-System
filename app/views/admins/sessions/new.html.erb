<div id="login" class="box">
	<h2>Login</h2>
	<section>
		<% if notice %>
		<div class="information msg">
		<%= notice %>
		</div>
		<div class="clear"></div>
		<% end %>

		<% if alert %>
		<div class="error msg">
		<%= alert %>
		</div>
		<div class="clear"></div>
		<% end %>
		
		
		<!-- <div class="error msg">Message if login failed</div> -->
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<dl>
				<dt><%= f.label :username %></dt>
				<dd><%= f.text_field :username, :tabindex => 1 %></dd>
			
				<dt><%= f.label :password %></dt>
				<dd><%= f.password_field :password, :tabindex => 2 %></dd>
			</dl>
			
			<% if devise_mapping.rememberable? -%>
			<label><%= f.check_box :remember_me, :tabindex => 3 %> Remember Me</label>
			<% end -%>
			
			<p>
				<%= f.submit "LOGIN", :class => "button gray", :id => "loginbtn", :tabindex => 4 %>
			</p>
		<% end %>
	</section>
</div>
