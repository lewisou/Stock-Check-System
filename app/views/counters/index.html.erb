<article>
	<h2>Listing counters</h2>



	<table class="gtable">
		<thead>
		<tr>
			<th>Name</th>
			<th>Locations</th>
			<th>Action</th>
		</tr>
		</thead>
		
		<tbody>
		<% @counters.each do |counter| %>
		<tr>
			<td><%= counter.name %></td>
			<td><%= counter.locations.map(&:code).join(", ") %></td>
			<td>
				<%= link_to image_tag('icons/edit.png', :alt => "Edit"), edit_counter_path(counter), :title => "Edit" %>
				<%= link_to image_tag('icons/cross.png', :alt => "Delete"), counter, :confirm => 'Are you sure?', :method => :delete, :title => "Delete" %>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>

	<%= link_to 'New Counter', new_counter_path %>
</article>

<article>
	<h2>Listing locations</h2>

	<table class="gtable">
		<thead>
		<tr>
			<th>Code</th>
			<th>Counters</th>
			<th>Action</th>
		</tr>
		</thead>
		
		<tbody>
		<% curr_check.locations.all(:order => "code ASC").each do |location| %>
		<tr>
			<td><%= location.code %> (<%= location.description %>)</td>
			<td><%= location.counters.map(&:name).join(", ") %></td>
			<td>
				<%= link_to "Assign", location_path(location) %>
			</td>
		</tr>
		<% end %>
		</tbody>
	</table>
</article>

