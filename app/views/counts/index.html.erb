<% @sub_menu = :entry %>


<article>
	<%= render :partial => 'shared/flash' %>
	<%= form_for @search, :url => counts_path, :method => :get do |f| %>
		<fieldset>
			<legend>Search</legend>
			<dl class="inline">
				<dt><label for="name">Tag Number</label></dt>
				<dd>
					<%= f.text_field :id_eq, :class => "small required", :size => "50", :tabindex => 2 %>
					<%= hidden_field_tag :count, @c_i %>
					<%= f.submit 'Search', :class => "button" %>
				</dd>
			</dl>

		</fieldset>
	<% end %>
</article>

<% if @tag %>
<article>
	<%= render :partial => 'shared/flash' %>
	<h1 <%= "style='background-color: ##{curr_check.send("color_#{@c_i}".to_sym)}'" if curr_check.send("color_#{@c_i}".to_sym) %>>Count <%= @c_i %> Data Entry</h1>

	<%= form_for @tag, :url => count_path(@tag) do |f| %>
		<fieldset>
			<legend>Input</legend>
			<dl class="inline">
				<dt><label>Tag Number</label></dt>
				<dd><label><%= @tag.id %></label></dd>
			
				<dt><label>Location</label></dt>
				<dd><label><%= @tag.inventory.location.try(:code) %> <%= @tag.inventory.location.try(:description) %></label></dd>
				
				
				<dt><label>Item Number</label></dt>
				<dd><label><%= @tag.inventory.item.try(:code) %></label></dd>
			
				<dt><label>Description</label></dt>
				<dd><label><%= @tag.inventory.item.try(:description) %></label></dd>

				<% if @c_i == 1 %>
				<dt><%= f.label :sloc, 'Shelf Location' %></dt>
				<dd><label><%= @tag.sloc || '' %></label> <%= link_to image_tag('icons/edit.png'), edit_tag_path(@tag) %></dd>
				<% end %>
				
				<% if @c_i == 3 %>
				<dt><%= f.label :count_1 %></dt>
				<dd><label><%= @tag.count_1 %></label></dd>
				<dt><%= f.label :count_2 %></dt>
				<dd><label><%= @tag.count_2 %></label></dd>
				<% end %>

				<dt><%= f.label @c_s %></dt>
				<dd>
					<%= f.text_field @c_s, :class => "small required", :size => "50", :tabindex => 1 %>
					<%= hidden_field_tag :count, @c_i %>
				</dd>

			</dl>

			<div class="buttons">
				<%= f.submit 'Save', :class => "button" %>
			</div>
		</fieldset>
	<% end %>
</article>
<% end %>


