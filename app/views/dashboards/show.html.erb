<% @nav = :dashboard %>

<article id="dashboard">
	<%= render :partial => 'shared/flash' %>

	<h1>Dashboard</h1>

	<section class="icons">
		<ul>
<% if has_curr_check? %>

			<% if has_role? :controller && has_curr_check? && allow_data_entry? %>
			<li>
				<%= link_to raw("#{image_tag('eleganticons/Config.png')} <span>Setup</span>"), current_god_checks_path %>
			</li>
			<% end %>

			<% if has_role? :admin %>
			<li>
				<%= link_to raw("#{image_tag('eleganticons/Graph.png')} <span>Admin</span>"), missing_cost_adm_items_path %>
			</li>
			<% end %>

			<% if has_role?(:counter) && allow_data_entry? %>
			<li><%= link_to raw("#{image_tag('eleganticons/Paper-pencil.png')} <span>Count One</span>"), counts_path(:count => 1) %></li>

			<% if Tag.in_check(curr_check.id).not_finish(1).count == 0 %>
			<li><%= link_to raw("#{image_tag('eleganticons/Paper-pencil.png')} <span>Count Two</span>"), counts_path(:count => 2) %></li>
			<% end %>

			<% end %>

		<% if curr_check && !curr_check.instruction.nil? %>
		<li>
		<%= link_to(raw("#{image_tag('eleganticons/Paper.png')}<span>Instruction 1</span>"), attachment_path(curr_check.instruction)) %>
		</li>
		<% end %>

		<% if curr_check && !curr_check.instruction2.nil? %>
		<li>
		<%= link_to(raw("#{image_tag('eleganticons/Paper.png')}<span>Instruction 2</span>"), attachment_path(curr_check.instruction2)) %>
		</li>
		<% end %>

		<% if curr_check && !curr_check.instruction3.nil? %>
		<li>
		<%= link_to(raw("#{image_tag('eleganticons/Paper.png')}<span>Instruction 3</span>"), attachment_path(curr_check.instruction3)) %>
		</li>
		<% end %>

		<% if curr_check && !curr_check.instruction4.nil? %>
		<li>
		<%= link_to(raw("#{image_tag('eleganticons/Paper.png')}<span>Instruction 4</span>"), attachment_path(curr_check.instruction4)) %>
		</li>
		<% end %>
<% end %>
		<% if has_role? :controller %>
		<li>
			<%= link_to raw("#{image_tag('eleganticons/Person-group.png')} <span>Accounts</span>"), accounts_path %>
		</li>
		<% end %>

		<li>
			<%= link_to raw("#{image_tag('eleganticons/X.png')} <span>Logout</span>"), destroy_admin_session_path %>
		</li>

		</ul>
	</section>
</article>

