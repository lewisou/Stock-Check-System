<% @sub_menu = :current %>

<% if has_curr_check? %>
<article>
<%= render :partial => "shared/flash" %>

<h1>Status</h1>
<%= render :partial => 'shared/curr_check', :locals => {:curr_check => @check} %>
</article>

<article>
<h2>Reports</h2>
<table class="infos">
	<tr>
		<td><%= link_to "Summary of counts by location", god_check_tags_path(curr_check) %></td>
	</tr>
	<tr>
		<td><%= link_to "Summary by value", god_check_inventories_path(curr_check) %></td>
	</tr>
	<tr>
		<td><%= link_to 'Log', god_check_activities_path(curr_check) %></td>
	</tr>
</table>
</article>
<% end %>


<% if allow_check_control? %>
<article>
	<h2>Actions</h2>

	<div class="actions">
		<% if curr_check && curr_check.state == 'open' %>
			<%= loading_link 'Complete', change_state_god_check_path(curr_check, :state => :complete), :method => :put, :confirm => "Are you sure to complete the check '#{curr_check.description}' ?", :class => "button" if curr_check.can_complete? %>
			<%= loading_link 'Cancel', change_state_god_check_path(curr_check, :state => :cancel), :method => :put, :confirm => "Are you sure to cancel the check '#{curr_check.description}' ?", :class => "button" %>
			<%= link_to 'Re-import', reimport_checks_path, :class => "button" unless curr_check.final_inv %>
			<%= link_to 'Final Re-import', reimport_checks_path(:check => {:final_inv => true}), :class => "button" %>
		<% elsif curr_check && ['complete', 'cancel'].include?(curr_check.state) %>
			<%= loading_link 'Archive', change_state_god_check_path(curr_check, :state => :archive), :method => :put, :confirm => "Are you sure to archive the check '#{curr_check.description}' ?", :class => "button" %>
			<%= loading_link 'Reopen', change_state_god_check_path(curr_check, :state => :open), :method => :put, :confirm => "Are you sure to reopen the check '#{curr_check.description}' ?", :class => "button" if curr_check.state != 'open' && true %>
			<%= link_to 'Recheck', god_rechecks_path, :class => 'button' %>
		<% else %>
			<%= link_to 'Start New One', new_god_check_path, :class => "button" %>
		<% end %>
	</div>
</article>
<% end %>

<% if curr_check && curr_check.state == 'complete' %>
<article>
	<h2>Download</h2>

	<table class="infos">
	<tbody>
		<tr>
			<th>Export to ALL ORDER</th>
			<td>
			<%= link_to('inventory_adjustment.xls', download_attachment_path(curr_check.inv_adj_xls)) unless curr_check.inv_adj_xls.nil? %>
			</td>
		</tr>
		<tr>
			<th>Manual Input XLS</th>
			<td><%= link_to('manual_input.xls', download_attachment_path(curr_check.manual_adj_xls)) unless curr_check.manual_adj_xls.nil? %></td>
		</tr>
	</tbody>
	</table>
</article>
<% end %>