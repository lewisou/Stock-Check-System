<% @sub_menu = :items %>
<article>
	<%= render :partial => 'shared/flash' %>
	
	<%= form_for @search, :method => :get do |f| %>
		<fieldset>
			<legend>Filter</legend>
			<dl class="inline">
				<dt><%= f.label :code_like %></dt>
				<dd>
				<%= f.text_field :code_like, :class => "small required", :tabindex => 1 %>
				<%= f.submit 'Search', :class => 'button' %>
				</dd>
			</dl>
		</fieldset>
		<%= link_to "New Item", new_item_path, :class => 'button' %>
	<% end %>
</article>

<article>
	<h1>Items List</h1>
	<table id="table2" class="gtable detailtable">
		<thead>
			<tr>
				<th>Item Number</th>
				<th>Description</th>
				<th>Cost</th>
				<th>AL</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
			<tr>
				<td><%= item.code %></td>
				<td><%= item.description[0, 35] %> <%= "..." if item.description.size > 35 %></td>
				<td><%= item.cost %></td>
				<td><%= item.from_al %></td>
				<td>
					<% if curr_check.state == 'open' %>
					<%= link_to image_tag('icons/edit.png'), edit_item_path(item), :title => 'Edit' %>
					<% end %>
					<%= link_to 'New Tag', new_item_tag_path(item) if curr_check.state == 'open' %>
					<% if item.inventories.count > 0 %>
					<a href="#" class="detail-link", title="Location"><%= image_tag('icons/box.png') %>(<%= item.inventories.count %>)</a>
					<% end %>
				</td>
			</tr>
			<tr class="detail">
				<td colspan="5">
					<table>
						<thead>
							<tr>
								<th>Location Code</th>
								<th>Location Description</th>
								<th>Quantity</th>
							</tr>
						</thead>
						<tbody>
							<% item.inventories.each do |inventory| %>
							<tr>
								<td><%= inventory.location.try(:code) %></td>
								<td><%= inventory.location.try(:description) %></td>
								<td><%= inventory.quantity %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
	<div class="tablefooter clearfix">
		<%= will_paginate @items %>
	</div>
</article>
