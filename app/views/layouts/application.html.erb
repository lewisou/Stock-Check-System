					</ul>
				</li>
				<li><a href="#">Counters</a>
					<ul>
						<li><a href="#">List</a></li>
						<li><a href="#">Check Area</a></li>
					</ul>
				</li>
				<li><a href="forms.html">Settings</a></li>
			</ul>
			<ul id="usermenu">
				<!-- <li><a href="#" class="inbox">Inbox (3)</a></li> -->
				<li><%= link_to 'Logout', destroy_admin_session_path %></li>
			</ul>
		</div>
	</div>
</nav>
<% end %>

