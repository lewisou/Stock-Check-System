<% @sub_menu = :missing_cost %>

<article>
	<%= form_for @search, :url => missing_cost_parts_path do |f| %>
		<fieldset>
			<legend>Search</legend>
			<dl class="inline">
				<dt><%= f.label :code_contains %></dt>
				<dd>
					<%= f.text_field :code_contains, :tabindex => 1 %>
					<%= f.submit 'Search', :class => "button" %>
				</dd>
			</dl>

		</fieldset>
	<% end %>
</article>

<article>
<h1>Part Numbers Missing Cost</h2>

<table class="gtable sortable">
	<thead>
		<tr>
			<th>Part Number</th>
			<th>Description</th>
			<th>Cost</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @parts.each do |part| %>
		<tr>
			<td><%= part.code %></td>
			<td><%= part.description[1, 40] if part.description %> <%= "..." if part.description && part.description.size > 40 %></td>
			<td><%= part.cost %></td>
			<td>
				<%= link_to image_tag('icons/edit.png', :alt => 'Edit'), input_price_part_path(part), :title => "Input price" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<div class="tablefooter clearfix">
	<%= will_paginate @parts %>
</div>

</article>
