<% if has_curr_check? %>
<table class="infos">
	<tbody>
		<tr>
			<th>Description</th>
			<td><%= curr_check.description %></td>
		</tr>
		<tr>
			<th>State</th>
			<td><%= curr_check.state %></td>
		</tr>
		
		<tr>
			<th>Launched by</th>
			<td><%= curr_check.admin.try(:email) %></td>
		</tr>
		<tr>
			<th>Started at</th>
			<td><%= curr_check.created_at %></td>
		</tr>
		<tr>
			<th>Inventory Size</td>
			<td><%= Inventory.in_check(curr_check.id).count %></td>
		</tr>
		<tr>
			<th>Tags</th>
			<td><%= totel = Tag.in_check(curr_check.id).count %></td>
		</tr>
		<tr>
			<th>Counted once tags</th>
			<td><%= Tag.in_check(curr_check.id).where(:count_1.not_eq => nil).count %></td>
		</tr>
		<tr>
			<th>Counted twice tags</th>
			<td><%= Tag.in_check(curr_check.id).where(:count_1.not_eq % nil & :count_2.not_eq % nil).count %></td>
		</tr>
		<tr>
			<th>Counted three times</th>
			<td>
			<%= third = Tag.in_check(curr_check.id).where(:count_1.not_eq % nil & :count_2.not_eq % nil & :count_3.not_eq % nil).count %>
			</td>
		</tr>
		<% if curr_check.state == 'archive' %>
		<tr>
			<th>ALL ORDER Import</th>
			<td>
			<%= link_to('locations.xls', attachment_path(curr_check.location_xls)) unless curr_check.location_xls.nil? %>
			<br />
			<%= link_to('items.xls', attachment_path(curr_check.item_xls)) unless curr_check.item_xls.nil? %>
			<br />
			<%= link_to('inventory_adjustment.xls', attachment_path(curr_check.inv_adj_xls)) unless curr_check.inv_adj_xls.nil? %>
			</td>
		</tr>
		<% end %>
		
	</tbody>
</table>


<div class="tablefooter clearfix">
	<div class="actions">
		<% if curr_check.state == 'open' %>
		<%= link_to 'Archive', change_state_checks_path(:state => :archive), :method => :put, :confirm => "Are you sure to archive the check '#{curr_check.description}' ?", :class => "button" %>
		<%= link_to 'Cancel', change_state_checks_path(:state => :cancel), :method => :put, :confirm => "Are you sure to cancel the check '#{curr_check.description}' ?", :class => "button" %>
		<% elsif curr_check.state == 'archive' %>
		<%= link_to 'Start New One', new_check_path, :class => "button" %>
		<% elsif curr_check.state == 'cancel' %>
		<%= link_to 'Start New One', new_check_path, :class => "button" %>
		<% end %>
		<%= link_to 'Reopen', change_state_checks_path(:state => :open), :method => :put, :confirm => "Are you sure to reopen the check '#{curr_check.description}' ?", :class => "button" if curr_check.state != 'open' %>
	</div>
</div>

<% else %>
<div class="tablefooter clearfix">
	<div class="actions">
		<%= link_to 'Begin a new check', new_check_path %>
	</div>
</div>

<% end %>