<%= form_for @tag, :html => {:class => 'uniform'} do |f| %>
	<% if @tag.errors.any? %>
		<div class="error msg">
			<h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
			<ul>
			<% @tag.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
			</ul>
		</div>	
	<% end %>

	<fieldset>
		<legend>Choose Location</legend>
		<dl class="inline">
			<dt><%= f.label :item_id, 'Item Number' %></dt>
			<dd>
				<%= f.label :item_id, @item.code %>
				<%= f.hidden_field :item_id %>
			</dd>
			<dt><%= f.label :item_description %></dt>
			<dd>
				<%= f.label :item_description, @item.description %>
			</dd>
			<dt><%= f.label :location_id, 'Location' %></dt>
			<dd>
				<%= f.collection_select(:location_id, curr_check.locations, :id, :code, {:include_blank => false}, {:class => "small", :tabindex => 1})  %>
			</dd>
		</dl>
	</fieldset>
	<div class="buttons">
		<%= f.submit :class => 'button' %>
	</div>

<% end %>
